# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/euramax
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=admin@euramax.eu
SMTP_PASSWORD=password
EMAIL_FROM=noreply@euramax.eu

# Push Notification Configuration
PUSH_SERVICE_KEY=your-push-service-key
NOTIFICATION_WEBHOOK_URL=https://api.euramax.eu/notifications

# AI Model Configuration
AI_MODEL_PATH=./models/
THREAT_DETECTION_THRESHOLD=0.85
PHISHING_MODEL_ENDPOINT=https://api.euramax.eu/ai/phishing

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_SECURITY_TOPIC=euramax-security
KAFKA_NOTIFICATION_TOPIC=euramax-notifications

# Monitoring Configuration
PROMETHEUS_PORT=8000
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn

# Dutch Language Configuration
DUTCH_LANGUAGE_MODEL=nl_core_news_sm
LOCALIZATION_PATH=./locales/nl/

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "https://app.euramax.eu"]
RATE_LIMIT_PER_MINUTE=100
MAX_EMAIL_SIZE_MB=25